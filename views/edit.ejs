<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Author home page</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
        <style>
            a{
                color: inherit;
                color:green;
            };

            button{
                color:green;
            };
        </style>
    </head>

    <body>
        <div class="container-md">
        <p>Microblogger: Author Homepage</p>
        <a href="/author/home">back</a> 
        <!-- show blog information -->
        <div>
            <% blog_info.forEach(function(item){ %>
                <center>
                    <h1> <%= item.blog_title %> </h1>
                    <h2> <%= item.blog_subtitle %> </h2>
                    <h3> <%= item.author_name %> </h3>
                </center>
            <% }) %>
        </div>

        <!-- list with article information -->
          <div class="card text-dark bg-light mb-3" style="max-width: 18rem; padding:10px;">
            <div class="card-body"></div>
                <% article_info.forEach(function(article){ %>
            
                    Created: <%= article.created %> <br>
                    Last modified: <%= article.last_modified %> <br>
                    Status: <%= article.article_status %>

          </div>

            <!-- form for ediding article information -->
            <div>

                <form action="<%= article.article_id %>" method="post">
                    <label for="title">Title:</label> 
                    <input type="text" id="title" name="title" value= "<%= article.title %>" ><br><br>
                    <label for="subtitle">Subtitle:</label>
                    <input type="text" id="subtitle" name="subtitle" value= "<%= article.subtitle %>" ><br><br>
                    <label for="article_body">Body:</label><br> 
                    <textarea cols='50' rows='7'name="article_value"> <%= article.article_value %> </textarea><br>
                    <button type="submit">update</button>
                </form>
            </div>

        <% }) %>  


        </div>



    </body>
</html>