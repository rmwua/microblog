<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Reader homepage</title>
    <!-- style -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
    <style>
        a{
            color: inherit;
            color:green;
        };

        button{
            color:green;
        };
    </style>
</head>
<body>
    <div class="container-md">
        <p>Microblogger: Reader Homepage</p>
        <a href="/reader/home">back</a> 
        <!-- show blog information -->
        <div>
              <% blog_info.forEach(function(item){ %>
            <center>
                    <h1> <%= item.blog_title %> </h1>
                    <h2> <%= item.blog_subtitle %> </h2>
                    <h3> <%= item.author_name %> </h3>
            </center>
            <% }) %>
        </div>

        <!-- show articles -->
        <br>
                <% article.forEach(function(item){ %>
                    <h2> <%= item.title %> </h2>
                    <h3> <%= item.subtitle %> </h3>
                    <%= item.article_value %>
                    <br>
                    <br>
                    <form action="like/article-id=<%= item.article_id %>" method="post">
                        <button>Like <%= item.likes %></button>
                    </form>
        <br>
        <br>

        <!-- add comment -->
        <div> 
            <b>Comment text:</b>
            <br>
            <form action="post-comment/article-id=<%= item.article_id %>" method="post">
                <textarea cols='50' rows='5'name="comment_value"></textarea><br>
                <button type="submit">add comment</button>
                <br>
                <br>
                <br>
            </form>
        </div>
        
        <% }) %>

        <!-- comment section -->
        <div>
            <% comments.forEach(function(comment){ %>
                <%= comment.comment_value %>
                <br>
                <%= comment.published %>
                <br>
                <br>
                <br>
            <% }) %>
        </div>
    </div>
</body>
</html>